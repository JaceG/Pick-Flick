{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                        // Change to NodeNext for ES modules
    "moduleResolution": "nodenext",              // Use NodeNext for module resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
